# =============================================================================
# Task Master AI - API Keys (for project management)
# =============================================================================
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional, for Groq models.
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional, for OpenRouter models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...

# =============================================================================
# Jarvis Backend - Voice Assistant API Keys (REQUIRED for backend)
# =============================================================================

# Speech-to-Text (Required)
DEEPGRAM_API_KEY="your_deepgram_api_key_here"         # Required: Deepgram Nova-2 for ASR

# Large Language Model (Required)
# Note: OPENAI_API_KEY defined above is used for GPT-4 Turbo

# Text-to-Speech (Required)
ELEVENLABS_API_KEY="your_elevenlabs_api_key_here"     # Required: ElevenLabs Turbo v2.5 for TTS

# Vector Database (Required)
PINECONE_API_KEY="your_pinecone_api_key_here"         # Required: Pinecone for document search

# GitHub Code Search (Optional)
GITHUB_TOKEN="your_github_token_here"                  # Optional: Personal access token for GitHub API

# Company API (Optional - for demo)
COMPANY_API_KEY="your_company_api_key_here"            # Optional: Internal API access

# =============================================================================
# AWS Configuration (for deployment)
# =============================================================================
AWS_REGION="us-east-1"                                 # AWS region for deployment
AWS_ACCOUNT_ID="your_aws_account_id"                   # AWS account ID

# =============================================================================
# Application Configuration
# =============================================================================

# Backend Configuration
BACKEND_PORT=8000                                      # Backend API port
BACKEND_HOST="0.0.0.0"                                # Backend host

# Frontend Configuration
VITE_WS_URL="ws://localhost:8000/ws"                  # WebSocket URL for local development
VITE_API_KEY="jarvis_dev_key"                         # API key for frontend (dev only)

# Database Configuration (for production)
DATABASE_URL="postgresql://user:pass@localhost:5432/jarvis"  # PostgreSQL connection
REDIS_URL="redis://localhost:6379"                    # Redis connection

# =============================================================================
# Development Flags
# =============================================================================
NODE_ENV="development"                                 # Environment: development, production
DEBUG="false"                                         # Enable debug logging